---
export const prerender = true;
import Layout from "@/layouts/Layout.astro";
import PriceRangeFilter from "@/components/islands/PriceRangeFilter";
import CollapsibleFilter from "@/components/islands/CollapsibleFilter";
import ProductsList from "@/components/islands/ProductsList";
import { supabase } from "@/lib/supabase";

// Obtener par√°metros
const url = new URL(Astro.request.url);
const searchQuery = url.searchParams.get("q") || "";
const selectedCategory = url.searchParams.get("categoria") || "";
const sortOrder = url.searchParams.get("orden") || "relevancia";

// Obtener productos
let allProducts: any[] = [];
let categories: any[] = [];
let debugInfo = { error: null, productsCount: 0, categoriesCount: 0 };

try {
  // Obtener categor√≠as
  const { data: cats } = await supabase
    .from("categorias")
    .select("id, nombre, slug")
    .eq("activa", true)
    .order("orden", { ascending: true });

  categories = cats || [];
  debugInfo.categoriesCount = categories.length;
  console.log("üì¶ Categor√≠as cargadas:", categories.length);

  // Obtener productos - CONSULTA SIMPLE SIN RELACIONES PRIMERO
  const { data: products, error: productsError } = await supabase.from(
    "productos",
  ).select(`
      *,
      imagenes_producto(url)
    `);

  debugInfo.error = productsError;

  console.log("üì¶ Error Supabase:", productsError?.message || "ninguno");
  console.log("üì¶ Productos cargados:", products?.length || 0);

  if (products && products.length > 0) {
    allProducts = products.map((p: any) => ({
      ...p,
      imagen_principal: p.imagenes_producto?.[0]?.url,
    }));
    debugInfo.productsCount = products.length;
    console.log("‚úÖ Primer producto:", {
      nombre: allProducts[0].nombre,
      precio_venta: allProducts[0].precio_venta,
      imagen: allProducts[0].imagen_principal,
    });
  } else {
    console.log("‚ùå No hay productos en la BD");
  }
} catch (err: any) {
  console.error("‚ùå Error catch:", err);
  debugInfo.error = err.message;
}

console.log("üìä DEBUG:", debugInfo);

// Aplicar filtros (para el contador y la informaci√≥n del servidor)
let filteredProducts = allProducts;

console.log("   ‚úÖ Productos despu√©s de filtrar:", filteredProducts.length);

// Ordenar productos
switch (sortOrder) {
  case "reciente":
    filteredProducts.sort((a, b) => new Date(b.created_at || 0).getTime() - new Date(a.created_at || 0).getTime());
    break;
  case "menor-precio":
    filteredProducts.sort((a, b) => (a.precio_venta || 0) - (b.precio_venta || 0));
    break;
  case "mayor-precio":
    filteredProducts.sort((a, b) => (b.precio_venta || 0) - (a.precio_venta || 0));
    break;
  case "mejor-valorado":
    filteredProducts.sort((a, b) => (b.rating || 0) - (a.rating || 0));
    break;
  default:
    // Relevancia - mantener orden original
    break;
}

const totalResults = allProducts.length;
const hasResults = allProducts.length > 0;

// Calcular precios m√≠nimo y m√°ximo reales de los productos (en c√©ntimos)
const minPriceInDB = hasResults 
  ? Math.min(...allProducts.map(p => p.precio_venta || 0))
  : 0;
const maxPriceInDB = hasResults 
  ? Math.max(...allProducts.map(p => p.precio_venta || 0))
  : 1799;

// Convertir a euros para el componente (el componente espera euros)
const minPriceInEuros = Math.floor(minPriceInDB / 100);
const maxPriceInEuros = Math.ceil(maxPriceInDB / 100);
---

<Layout title="Productos - FashionStore">


  <div class="min-h-screen bg-gray-50">
    {/* Header Section */}
    <div class="border-b border-gray-200 py-8" style="background-color: #e2ff7a;">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-black italic text-gray-900 mb-2">
          Cat√°logo de Productos
        </h1>
        <p class="text-gray-700">
          {totalResults} productos disponibles
          {searchQuery && ` - B√∫squeda: "${searchQuery}"`}
          {
            selectedCategory &&
              categories.length > 0 &&
              ` - Categor√≠a: ${categories.find((c) => c.id.toString() === selectedCategory)?.nombre || ""}`
          }
        </p>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        {/* Sidebar - Filtros */}
        <div class="lg:col-span-1">
          <div class="bg-white rounded-lg shadow-sm p-6 sticky top-4">
            <h2 class="text-lg font-bold text-gray-900 mb-6">Filtros</h2>

            {/* Filtro de Categor√≠as */}
            <div class="mb-8">
              <CollapsibleFilter client:load title="Categor√≠as">
                <div class="space-y-2">
                  <a
                    href={`/productos${searchQuery ? `?q=${encodeURIComponent(searchQuery)}` : ""}`}
                    class={`block px-4 py-2 rounded-lg transition ${!selectedCategory ? "bg-[#00aa45] text-white" : "text-gray-700 hover:bg-gray-100"}`}
                  >
                    Todas
                  </a>
                  {
                    categories.map((cat) => (
                      <a
                        href={`/productos?categoria=${cat.id}${searchQuery ? `&q=${encodeURIComponent(searchQuery)}` : ""}`}
                        class={`block px-4 py-2 rounded-lg transition ${selectedCategory === cat.id.toString() ? "bg-[#00aa45] text-white" : "text-gray-700 hover:bg-gray-100"}`}
                      >
                        {cat.nombre}
                      </a>
                    ))
                  }
                </div>
              </CollapsibleFilter>
            </div>

            {/* Filtro de Precio */}
            <div class="mb-8 pt-6 border-t border-gray-200">
              <PriceRangeFilter client:load minPrice={minPriceInEuros} maxPrice={maxPriceInEuros} />
            </div>

            {/* Filtro de Condici√≥n */}
            <div class="pt-6 border-t border-gray-200">
              <CollapsibleFilter client:load title="Condici√≥n">
                <div class="space-y-2">
                  <label class="flex items-center">
                    <input type="checkbox" class="rounded text-[#00aa45]" />
                    <span class="ml-3 text-gray-700">Excelente</span>
                  </label>
                  <label class="flex items-center">
                    <input type="checkbox" class="rounded text-[#00aa45]" />
                    <span class="ml-3 text-gray-700">Muy bueno</span>
                  </label>
                  <label class="flex items-center">
                    <input type="checkbox" class="rounded text-[#00aa45]" />
                    <span class="ml-3 text-gray-700">Buen estado</span>
                  </label>
                </div>
              </CollapsibleFilter>
            </div>
          </div>
        </div>

        {/* Productos */}
        <div class="lg:col-span-3">
          {
            hasResults ? (
              <>
                <div class="flex justify-between items-center mb-6">
                  <p class="text-gray-600">
                    Mostrando <span class="font-semibold">{totalResults}</span>{" "}
                    producto{totalResults !== 1 ? "s" : ""}
                  </p>
                  <select 
                    id="sort-select"
                    class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:border-[#00aa45] cursor-pointer"
                  >
                    <option value="relevancia" selected={sortOrder === "relevancia"}>Ordenar por: Relevancia</option>
                    <option value="reciente" selected={sortOrder === "reciente"}>M√°s reciente</option>
                    <option value="menor-precio" selected={sortOrder === "menor-precio"}>Menor precio</option>
                    <option value="mayor-precio" selected={sortOrder === "mayor-precio"}>Mayor precio</option>
                    <option value="mejor-valorado" selected={sortOrder === "mejor-valorado"}>Mejor valorado</option>
                  </select>
                  <script>
                    document.getElementById('sort-select')?.addEventListener('change', (e) => {
                      const url = new URL(window.location.href);
                      url.searchParams.set('orden', (e.target as HTMLSelectElement).value);
                      window.location.href = url.toString();
                    });
                  </script>
                </div>

                <div>
                  <ProductsList 
                    client:load 
                    products={allProducts} 
                    categories={categories}
                    searchQuery={searchQuery}
                    selectedCategory={selectedCategory}
                  />
                </div>
              </>
            ) : (
              <div class="text-center py-20">
                <svg
                  class="w-40 h-40 mx-auto text-gray-300 mb-6"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                  />
                </svg>
                <h2 class="text-3xl font-bold text-gray-900 mb-3">
                  No se encontraron productos
                </h2>
                <p class="text-gray-600 text-lg mb-8">
                  {searchQuery
                    ? `No hay productos que coincidan con "${searchQuery}"`
                    : "Intenta ajustando tus filtros"}
                </p>
                <a
                  href="/productos"
                  class="inline-flex items-center gap-2 bg-[#00aa45] text-white px-8 py-3 rounded-lg font-semibold hover:bg-[#009340] transition"
                >
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 11l4-4m0 0l4 4m-4-4v4"
                    />
                  </svg>
                  Ver todos los productos
                </a>
              </div>
            )
          }
        </div>
      </div>
    </div>
  </div>
</Layout>

---
// Admin Login Page
// Solo renderiza la p치gina - el login se maneja en /api/admin/login
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login - FashionStore</title>
  </head>
  <body class="bg-white min-h-screen flex items-center justify-center p-4">
    <main class="w-full max-w-md">
      <!-- Logo y T칤tulo -->
      <div class="text-center mb-8">
        <div
          class="inline-flex items-center justify-center w-32 h-32 md:w-40 md:h-40 rounded-full mb-4 overflow-hidden"
        >
          {/* AQU칈 VA TU FOTO - Reemplaza la etiqueta img src con tu ruta */}
          <img
            src="/admin-logo.png"
            alt="FashionStore Admin"
            class="w-full h-full object-cover"
          />
        </div>
        <h1 class="text-3xl md:text-4xl font-black text-gray-900 mb-2">
          FashionStore
        </h1>
        <p class="text-[#00aa45] text-sm font-bold">Panel de Administraci칩n</p>
      </div>

      <!-- Formulario -->
      <div
        class="bg-gradient-to-br from-[#00aa45] to-[#00cc55] rounded-2xl shadow-2xl p-1"
      >
        <div class="bg-white rounded-xl p-8">
          <!-- Error Message (JavaScript) -->
          <div id="error-container"></div>

          <!-- Development Credentials Helper (only in dev) -->
          {
            import.meta.env.DEV && (
              <div class="mb-6 p-4 bg-blue-50 border-2 border-blue-400 rounded-lg">
                <p class="text-blue-700 text-sm font-bold mb-2">
                  游댢 Modo Desarrollo
                </p>
                <p class="text-blue-600 text-xs">
                  Email:{" "}
                  <>
                    <code class="bg-blue-100 px-2 py-1 rounded">
                      admin@fashionstore.com
                    </code>
                    <br />
                  </>
                  Password:{" "}
                  <code class="bg-blue-100 px-2 py-1 rounded">1234</code>
                </p>
              </div>
            )
          }

          <form method="POST" class="space-y-5">
            <!-- Usuario -->
            <div>
              <label
                for="username"
                class="block text-sm font-bold text-gray-800 mb-2"
              >
                Usuario
              </label>
              <div class="relative">
                <svg
                  class="absolute left-3 top-3.5 w-5 h-5 text-gray-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  ></path>
                </svg>
                <input
                  type="text"
                  id="username"
                  name="username"
                  required
                  placeholder="admin@fashionstore.com"
                  autocomplete="off"
                  class="w-full pl-10 pr-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-[#00aa45] focus:ring-2 focus:ring-[#00aa45]/20 transition-all bg-white"
                />
              </div>
            </div>

            <!-- Contrase침a -->
            <div>
              <label
                for="password"
                class="block text-sm font-bold text-gray-800 mb-2"
              >
                Contrase침a
              </label>
              <div class="relative">
                <svg
                  class="absolute left-3 top-3.5 w-5 h-5 text-gray-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                  ></path>
                </svg>
                <input
                  type="password"
                  id="password"
                  name="password"
                  required
                  placeholder="Ingresa tu contrase침a"
                  autocomplete="off"
                  class="w-full pl-10 pr-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-[#00aa45] focus:ring-2 focus:ring-[#00aa45]/20 transition-all bg-white"
                />
              </div>
            </div>

            <!-- Bot칩n -->
            <button
              type="submit"
              class="w-full bg-gradient-to-r from-[#00aa45] to-[#00cc55] text-white font-bold py-3 rounded-lg hover:shadow-lg hover:shadow-[#00aa45]/50 transition-all mt-8 flex items-center justify-center gap-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M3 8a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                  clip-rule="evenodd"></path>
              </svg>
              Acceder al Panel
            </button>
          </form>
        </div>
      </div>

      <!-- Footer -->
      <div class="text-center mt-8">
        <a
          href="/"
          class="text-gray-600 hover:text-[#00aa45] transition-colors text-sm font-medium inline-flex items-center gap-2"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
              clip-rule="evenodd"></path>
          </svg>
          Volver a la tienda
        </a>
      </div>
    </main>

    <script>
      const form = document.querySelector("form") as HTMLFormElement;

      form?.addEventListener("submit", async (e: Event) => {
        e.preventDefault();

        const usernameEl = document.querySelector(
          "#username",
        ) as HTMLInputElement;
        const passwordEl = document.querySelector(
          "#password",
        ) as HTMLInputElement;
        const username = usernameEl?.value.trim() || "";
        const password = passwordEl?.value.trim() || "";

        if (!username) {
          showError("Por favor ingresa tu correo electr칩nico");
          return;
        }

        if (!password) {
          showError("Por favor ingresa tu contrase침a");
          return;
        }

        if (!username.includes("@")) {
          showError("El correo electr칩nico no es v치lido");
          return;
        }

        console.log("[CLIENT] Login attempt - using GET method");

        try {
          // Usar GET con par치metros en la URL (evita problemas de CSRF)
          const params = new URLSearchParams();
          params.append("username", username);
          params.append("password", password);

          const loginUrl = `/api/admin/login?${params.toString()}`;
          console.log("[CLIENT] Fetching:", loginUrl);

          const response = await fetch(loginUrl);

          console.log("[CLIENT] Response status:", response.status);

          const text = await response.text();
          console.log(
            "[CLIENT] Response text (first 200 chars):",
            text.substring(0, 200),
          );

          let data;
          try {
            data = JSON.parse(text);
          } catch (e) {
            console.error("[CLIENT] Failed to parse JSON:", e);
            console.error("[CLIENT] Response text:", text);
            showError("Error del servidor: respuesta inv치lida");
            return;
          }

          if (response.ok && data.token) {
            console.log("[CLIENT] Login successful");
            localStorage.setItem("admin_token", data.token);
            localStorage.setItem("admin_user", data.username);
            console.log("[CLIENT] Token saved, redirecting to dashboard...");
            window.location.href = "/admin/dashboard";
          } else {
            showError(data.error || "Credenciales inv치lidas");
          }
        } catch (error) {
          console.error("[CLIENT] Error:", error);
          showError(
            error instanceof Error ? error.message : "Error de conexi칩n",
          );
        }
      });

      function showError(message: string) {
        let errorDiv = document.querySelector("[data-error-message]");

        if (!errorDiv) {
          errorDiv = document.createElement("div");
          errorDiv.setAttribute("data-error-message", "true");
          errorDiv.className =
            "mb-6 p-4 bg-red-50 border-2 border-red-400 rounded-lg";
          const p = document.createElement("p");
          p.className = "text-red-700 text-sm font-bold";
          errorDiv.appendChild(p);

          const form = document.querySelector("form");
          form?.parentElement?.insertBefore(errorDiv, form);
        }

        const pElement = errorDiv.querySelector("p");
        if (pElement) {
          pElement.textContent = message;
        }
        (errorDiv as HTMLElement).style.display = "block";

        errorDiv.scrollIntoView({ behavior: "smooth", block: "center" });
      }
    </script>
  </body>
</html>

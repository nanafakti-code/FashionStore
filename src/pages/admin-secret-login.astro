---
// Admin Login Page
// Solo renderiza la página - el login se maneja en /api/admin/login
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Login - FashionStore</title>
</head>
<body class="bg-white min-h-screen flex items-center justify-center p-4">
  <main class="w-full max-w-md">
    <!-- Logo y Título -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-32 h-32 md:w-40 md:h-40 rounded-full mb-4 overflow-hidden">
        {/* AQUÍ VA TU FOTO - Reemplaza la etiqueta img src con tu ruta */}
        <img src="/admin-logo.png" alt="FashionStore Admin" class="w-full h-full object-cover" />
      </div>
      <h1 class="text-3xl md:text-4xl font-black text-gray-900 mb-2">FashionStore</h1>
      <p class="text-[#00aa45] text-sm font-bold">Panel de Administración</p>
    </div>

    <!-- Formulario -->
    <div class="bg-gradient-to-br from-[#00aa45] to-[#00cc55] rounded-2xl shadow-2xl p-1">
      <div class="bg-white rounded-xl p-8">
        <!-- Error Message (JavaScript) -->
        <div id="error-container"></div>

        <form method="POST" class="space-y-5">
          <!-- Usuario -->
          <div>
            <label for="username" class="block text-sm font-bold text-gray-800 mb-2">
              Usuario
            </label>
            <div class="relative">
              <svg class="absolute left-3 top-3.5 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <input
                type="text"
                id="username"
                name="username"
                required
                placeholder="admin@fashionstore.com"
                autocomplete="off"
                class="w-full pl-10 pr-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-[#00aa45] focus:ring-2 focus:ring-[#00aa45]/20 transition-all bg-white"
              />
            </div>
          </div>

          <!-- Contraseña -->
          <div>
            <label for="password" class="block text-sm font-bold text-gray-800 mb-2">
              Contraseña
            </label>
            <div class="relative">
              <svg class="absolute left-3 top-3.5 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
              <input
                type="password"
                id="password"
                name="password"
                required
                placeholder="Ingresa tu contraseña"
                autocomplete="off"
                class="w-full pl-10 pr-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-[#00aa45] focus:ring-2 focus:ring-[#00aa45]/20 transition-all bg-white"
              />
            </div>
          </div>

          <!-- Botón -->
          <button
            type="submit"
            class="w-full bg-gradient-to-r from-[#00aa45] to-[#00cc55] text-white font-bold py-3 rounded-lg hover:shadow-lg hover:shadow-[#00aa45]/50 transition-all mt-8 flex items-center justify-center gap-2"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 8a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd" />
            </svg>
            Acceder al Panel
          </button>
        </form>
      </div>
    </div>

    <!-- Footer -->
    <div class="text-center mt-8">
      <a href="/" class="text-gray-600 hover:text-[#00aa45] transition-colors text-sm font-medium inline-flex items-center gap-2">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Volver a la tienda
      </a>
    </div>
  </main>

  <script>
    const form = document.querySelector('form') as HTMLFormElement;
    
    form?.addEventListener('submit', async (e: Event) => {
      e.preventDefault();
      
      const usernameEl = document.querySelector('#username') as HTMLInputElement;
      const passwordEl = document.querySelector('#password') as HTMLInputElement;
      const username = usernameEl?.value.trim() || '';
      const password = passwordEl?.value.trim() || '';
      
      if (!username) {
        showError('Por favor ingresa tu correo electrónico');
        return;
      }
      
      if (!password) {
        showError('Por favor ingresa tu contraseña');
        return;
      }
      
      if (!username.includes('@')) {
        showError('El correo electrónico no es válido');
        return;
      }
      
      console.log('[CLIENT] Login attempt - sending to /api/admin/login');
      
      try {
        const params = new URLSearchParams();
        params.append('username', username);
        params.append('password', password);
        
        const response = await fetch('/api/admin/login', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded'
          },
          body: params.toString()
        });
        
        console.log('[CLIENT] Response status:', response.status);
        console.log('[CLIENT] Response type:', response.type);
        
        const text = await response.text();
        console.log('[CLIENT] Response text (first 500 chars):', text.substring(0, 500));
        
        let data;
        try {
          data = JSON.parse(text);
        } catch (e) {
          console.error('[CLIENT] Failed to parse JSON:', e);
          console.error('[CLIENT] Response text:', text);
          showError('Error del servidor: respuesta inválida');
          return;
        }
        
        if (response.ok && data.token) {
          console.log('[CLIENT] Login successful');
          localStorage.setItem('adminToken', data.token);
          window.location.href = '/admin';
        } else {
          showError(data.error || 'Credenciales inválidas');
        }
      } catch (error) {
        console.error('[CLIENT] Error:', error);
        showError(error instanceof Error ? error.message : 'Error de conexión');
      }
    });
    
    function showError(message: string) {
      let errorDiv = document.querySelector('[data-error-message]');
      
      if (!errorDiv) {
        errorDiv = document.createElement('div');
        errorDiv.setAttribute('data-error-message', 'true');
        errorDiv.className = 'mb-6 p-4 bg-red-50 border-2 border-red-400 rounded-lg';
        const p = document.createElement('p');
        p.className = 'text-red-700 text-sm font-bold';
        errorDiv.appendChild(p);
        
        const form = document.querySelector('form');
        form?.parentElement?.insertBefore(errorDiv, form);
      }
      
      const pElement = errorDiv.querySelector('p');
      if (pElement) {
        pElement.textContent = message;
      }
      (errorDiv as HTMLElement).style.display = 'block';
      
      errorDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
  </script>
</body>
</html>

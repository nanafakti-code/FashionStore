---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
---

<Layout title="Pago Completado - FashionStore">
  <Header />
  
  <main class="min-h-screen bg-[#f5f5f7] flex items-center justify-center py-12">
    <div class="max-w-2xl mx-auto px-4">
      <div class="bg-white rounded-lg shadow-lg p-8 md:p-12 text-center">
        <!-- Icono de éxito -->
        <div class="mb-6">
          <svg class="w-20 h-20 mx-auto text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>

        <!-- Mensaje de éxito -->
        <h1 class="text-4xl font-black italic text-gray-900 mb-4">¡Pago Completado!</h1>
        <p class="text-xl text-gray-600 mb-8">
          Gracias por tu compra en FashionStore. Tu pedido ha sido procesado exitosamente.
        </p>

        <!-- Información del pedido -->
        <div class="bg-gray-50 p-6 rounded-lg mb-8 text-left">
          <h2 class="text-lg font-bold text-gray-900 mb-4">Detalles del Pedido</h2>
          <div class="space-y-2" id="order-details">
            <p class="text-gray-600">Cargando detalles del pedido...</p>
          </div>
        </div>

        <!-- Próximos pasos -->
        <div class="bg-blue-50 border border-blue-200 p-6 rounded-lg mb-8 text-left">
          <h2 class="text-lg font-bold text-blue-900 mb-4">Próximos Pasos</h2>
          <ul class="space-y-2 text-blue-800 list-disc list-inside">
            <li>Recibirás un email de confirmación en los próximos minutos</li>
            <li>Tu pedido será procesado dentro de 24 horas</li>
            <li>Recibirás un código de seguimiento por email</li>
            <li>Envío gratis a partir de 50€</li>
          </ul>
        </div>

        <!-- Botones -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a 
            href="/" 
            class="flex-1 bg-[#00aa45] text-white py-3 rounded-lg font-bold hover:bg-green-700 transition-colors text-center"
          >
            Volver al Inicio
          </a>
          <a 
            href="/productos" 
            class="flex-1 border-2 border-[#00aa45] text-[#00aa45] py-3 rounded-lg font-bold hover:bg-green-50 transition-colors text-center"
          >
            Seguir Comprando
          </a>
        </div>
      </div>
    </div>
  </main>

  <script>
    document.addEventListener('DOMContentLoaded', async () => {
      // Obtener sessionId de la URL
      const params = new URLSearchParams(window.location.search);
      const sessionId = params.get('session_id');

      if (!sessionId) {
        document.getElementById('order-details')!.innerHTML = '<p class="text-red-600">No se encontró información del pedido</p>';
        return;
      }

      try {
        // Obtener detalles de la sesión
        const response = await fetch(`/api/stripe/session/${sessionId}`);
        const session = await response.json();

        if (response.ok) {
          const totalAmount = (session.total_amount / 100).toFixed(2);
          
          document.getElementById('order-details')!.innerHTML = `
            <div>
              <p><strong>ID Pedido:</strong> ${session.id.substring(0, 20)}...</p>
              <p><strong>Email:</strong> ${session.customer_email}</p>
              <p><strong>Monto Total:</strong> ${totalAmount}€</p>
              <p><strong>Fecha:</strong> ${new Date(session.created * 1000).toLocaleDateString('es-ES')}</p>
              <p><strong>Estado:</strong> <span class="text-green-600 font-bold">Pagado ✓</span></p>
            </div>
          `;

          // Limpiar carrito
          localStorage.removeItem('cart');
          
          // Disparar evento para actualizar CartIcon
          window.dispatchEvent(new Event('cartUpdated'));
        } else {
          document.getElementById('order-details')!.innerHTML = '<p class="text-red-600">Error cargando detalles del pedido</p>';
        }
      } catch (error) {
        console.error('Error:', error);
        document.getElementById('order-details')!.innerHTML = '<p class="text-red-600">Error procesando la solicitud</p>';
      }
    });
  </script>
</Layout>

---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Acceso Denegado - FashionStore">
  <main
    class="min-h-screen bg-gradient-to-br from-red-50 to-orange-50 flex items-center justify-center py-12 px-4"
  >
    <div class="max-w-md w-full text-center">
      <!-- 403 Icon -->
      <div class="mb-6">
        <svg
          class="w-24 h-24 mx-auto text-red-500"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
          ></path>
        </svg>
      </div>

      <!-- Message -->
      <h1 class="text-5xl font-black text-red-600 mb-4">403</h1>
      <h2 class="text-3xl font-bold text-gray-800 mb-2">Acceso Denegado</h2>
      <p class="text-gray-600 mb-6">
        No tienes permiso para acceder a esta página. Por favor, inicia sesión
        como administrador.
      </p>

      <!-- Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/admin-secret-login"
          class="bg-[#00aa45] text-white px-6 py-3 rounded-lg font-bold hover:bg-green-700 transition-colors inline-block"
        >
          Ir a Login
        </a>
        <a
          href="/"
          class="bg-gray-300 text-gray-800 px-6 py-3 rounded-lg font-bold hover:bg-gray-400 transition-colors inline-block"
        >
          Volver al Inicio
        </a>
      </div>
    </div>
  </main>
</Layout>

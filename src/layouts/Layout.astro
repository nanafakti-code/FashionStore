---
import '@/styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="FashionStore - Tienda de productos reacondicionados" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-[#f5f5f7]">
    <slot />

    <footer class="bg-gray-900 text-white mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
          {/* Sobre nosotros */}
          <div>
            <h4 class="font-black italic text-lg mb-4">Sobre FashionStore</h4>
            <ul class="space-y-2 text-sm text-gray-400">
              <li><a href="#" class="hover:text-[#e2ff7a]">Acerca de nosotros</a></li>
              <li><a href="#" class="hover:text-[#e2ff7a]">Cómo funciona</a></li>
              <li><a href="#" class="hover:text-[#e2ff7a]">Blog</a></li>
              <li><a href="#" class="hover:text-[#e2ff7a]">Prensa</a></li>
            </ul>
          </div>

          {/* Compra */}
          <div>
            <h4 class="font-black italic text-lg mb-4">Compra</h4>
            <ul class="space-y-2 text-sm text-gray-400">
              <li><a href="#" class="hover:text-[#e2ff7a]">Categorías</a></li>
              <li><a href="#" class="hover:text-[#e2ff7a]">Ofertas</a></li>
              <li><a href="#" class="hover:text-[#e2ff7a]">Best Sellers</a></li>
              <li><a href="#" class="hover:text-[#e2ff7a]">Nuevo</a></li>
            </ul>
          </div>

          {/* Ayuda */}
          <div>
            <h4 class="font-black italic text-lg mb-4">Ayuda</h4>
            <ul class="space-y-2 text-sm text-gray-400">
              <li><a href="#" class="hover:text-[#e2ff7a]">Centro de ayuda</a></li>
              <li><a href="#" class="hover:text-[#e2ff7a]">Contacto</a></li>
              <li><a href="#" class="hover:text-[#e2ff7a]">Devoluciones</a></li>
              <li><a href="#" class="hover:text-[#e2ff7a]">Preguntas frecuentes</a></li>
            </ul>
          </div>

          {/* Legal */}
          <div>
            <h4 class="font-black italic text-lg mb-4">Legal</h4>
            <ul class="space-y-2 text-sm text-gray-400">
              <li><a href="#" class="hover:text-[#e2ff7a]">Términos de servicio</a></li>
              <li><a href="#" class="hover:text-[#e2ff7a]">Privacidad</a></li>
              <li><a href="#" class="hover:text-[#e2ff7a]">Cookies</a></li>
              <li><a href="#" class="hover:text-[#e2ff7a]">Sostenibilidad</a></li>
            </ul>
          </div>
        </div>

        <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center">
          <p class="text-sm text-gray-400 mb-4 md:mb-0">
            © 2026 FashionStore. Todos los derechos reservados.
          </p>
          <div class="flex gap-4">
            <a href="#" class="text-gray-400 hover:text-[#e2ff7a]">Facebook</a>
            <a href="#" class="text-gray-400 hover:text-[#e2ff7a]">Instagram</a>
            <a href="#" class="text-gray-400 hover:text-[#e2ff7a]">Twitter</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, sans-serif;
    background-color: #f5f5f7;
  }

  body {
    background-color: #f5f5f7;
  }
</style>

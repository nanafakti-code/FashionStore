# Sistema de Reservas de Carrito - Variables de Entorno

# Token secreto para validar llamadas del cron job
# IMPORTANTE: Generar un token aleatorio fuerte (ej: openssl rand -base64 32)
# No compartir ni hacer commit en el repositorio
CRON_SECRET=your-secret-cron-token-here

# Configuración de duración de reservas
# Actualmente: 1 minuto (configurado en SQL)
# Para cambiar, editar CART_RESERVATIONS.sql:
# INTERVAL '1 minute' -> INTERVAL 'X minutes'
RESERVATION_DURATION_MINUTES=1

# URLs para cron jobs externos
CLEANUP_ENDPOINT=https://tu-dominio.com/api/cleanup-expired-reservations
CLEANUP_SCHEDULE="*/1 * * * *"  # Cada minuto

# Logs y debugging
DEBUG_RESERVATIONS=false
LOG_CLEANUP_OPERATIONS=true

# Stripe / Pagos (si aplica)
STRIPE_PUBLIC_KEY=pk_...
STRIPE_SECRET_KEY=sk_...

# Email notifications (opcional)
NOTIFY_EXPIRED_RESERVATIONS=true
NOTIFICATION_EMAIL=admin@tu-dominio.com
